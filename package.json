{
  "name": "barcode-generator",
  "version": "1.0.0",
  "description": "Generate Code-128 barcodes and export to Word document",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "npx playwright test",
    "test:headed": "npx playwright test --headed",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build": "electron-builder --win --mac"
  },
  "build": {
    "appId": "com.barcode.generator",
    "productName": "Barcode Generator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [
    "barcode",
    "code128",
    "docx"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bwip-js": "^4.8.0",
    "docx": "^9.5.1",
    "exceljs": "^4.4.0",
    "pdfkit": "^0.17.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12"
  }
}
